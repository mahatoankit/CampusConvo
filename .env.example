# Google Gemini API Key
# Get your free key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_api_key_here

# Enable/disable LLM
USE_LLM=true

# Server settings
HOST=0.0.0.0
PORT=8000
SERVER_IP=192.168.x.x

# ChromaDB settings
CHROMA_PATH=embeddings/chroma_db
COLLECTION_NAME=college_documents

# RAG settings
DEFAULT_TOP_K=5
SIMILARITY_THRESHOLD=0.3

# Voice settings
ENABLE_VOICE=true
STT_MODEL=base
TTS_ENGINE=gtts
TTS_LANGUAGE=en
TTS_ACCENT=com
AUDIO_SAMPLE_RATE=16000

# Logging
LOG_LEVEL=INFO
